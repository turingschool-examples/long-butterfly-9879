<h1>Mechanic Page</h1>

<p><%= "Name: #{@mechanic.name}" %></p>
<p><%= "Years of Experience: #{@mechanic.years_experience}" %></p>
<p>Rides Currently Working On:</p>
<div id="mechanic_rides">
  <ul>
    <p>
      <% @mechanic.rides.each do |ride| %>
        <p><%= ride.name %></p>
      <% end %>
    </p>
  </ul>
</div>

<h3>Add a ride to workload:</h3>
<div id="add_ride">
  <%= form_with url: mechanic_rides_path(@mechanic), method: :post, local: true do |form| %>
    <%= form.label :ride_id, "Ride Id: " %>
    <%= form.text_field :ride_id %>
    <%= form.submit "Submit" %>
  <% end %>
</div>
